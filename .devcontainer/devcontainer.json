{
    "name": "Julia VSCode Dev Container",
    
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],
    
    "service": "julia-app",
    
    "workspaceFolder": "/app",
    
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/bin/zsh"
					}
				}
            },
            "extensions": [
                "julialang.language-julia",
                "codeium.codeium",
                "tamasfe.even-better-toml"
            ]
        }
    }
}